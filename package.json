{
  "name": "henry-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "prepare": "husky",
    "format": "pnpm -F @henry/lint run lint:fix"
  },
  "devDependencies": {
    "@henry/lint": "workspace:*",
    "@types/node": "^22.10.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@9.11.0",
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "pnpm format"
    ]
  }
}